#pragma once

#ifndef _SEMAPHORE_
#define _SEMAPHORE_
#include <yvals_core.h>
#if _STL_COMPILER_PREPROCESSOR

#if !_HAS_CXX20
#pragma message("The contents of <semaphore> are available only with C++20 or later.")
#else // ^^^ !_HAS_CXX20 / _HAS_CXX20 vvv
#include <atomic>
#include <cassert>
#include <chrono>
#include <condition_variable>
#include <cstddef>
#include <exception>

#pragma pack(push, _CRT_PACKING)
#pragma warning(push, _STL_WARNING_LEVEL)
#pragma warning(disable : _STL_DISABLED_WARNINGS)
_STL_DISABLE_CLANG_WARNINGS
#pragma push_macro("new")
#undef new

_STD_BEGIN
template <ptrdiff_t _LeastMaxValue = 256>
class counting_semaphore {
public:
    static constexpr ptrdiff_t(max)() noexcept {
        // _LeastMaxValue is used here so that things such as binary_semaphore are limited to the max value, should
        // probably be changed
        return _LeastMaxValue;
    }
    constexpr explicit counting_semaphore(ptrdiff_t _Desired) {
        _STL_ASSERT(
            _Desired >= 0 && _Desired <= max(), "Desired value for the semaphore falls outside of semaphore range");
        atomic_init(&_Counter, _Desired);
    }
    ~counting_semaphore()                         = default;
    counting_semaphore(const counting_semaphore&) = delete;
    counting_semaphore& operator=(const counting_semaphore&) = delete;

    void release(ptrdiff_t _Update = 1) {
        std::atomic_ref<ptrdiff_t> _AtomicRef(_Counter);
        _AtomicRef.fetch_add(_Update, memory_order::release);
        WakeByAddressAll(&_Counter);
    }
    void acquire() {
        ptrdiff_t _Undesired = 0;
        while (!try_acquire()) {
            if (!WaitOnAddress(&_Counter, &_Undesired, sizeof(_Counter), INFINITE)) {
                // Probably should move this into a .cpp file and wrap around that so that we don't pull in windows.h
                // spuriously
                throw system_error(GetLastError(), system_category());
            }
        }
    }
    bool try_acquire() noexcept {
        std::atomic_ref<ptrdiff_t> _AtomicRef(_Counter);
        ptrdiff_t _Old     = _AtomicRef.load(memory_order::acquire);
        ptrdiff_t _Desired = _Old - 1;
        if (_Old > 0 && _AtomicRef.compare_exchange_strong(_Old, _Desired)) {
            return true;
        }
        return false;
    }
    template <class _Rep, class _Period>
    bool try_acquire_for(const chrono::duration<_Rep, _Period>& _Rel_time) {
        ptrdiff_t _Undesired = 0;
        while (!try_acquire()) {
            if (!WaitOnAddress(&_Counter, &_Undesired, sizeof(_Counter), chrono::duration_cast<milli>(_Rel_time))) {
                // Probably should move this into a .cpp file and wrap around that so that we don't pull in windows.h
                // spuriously However the check for ERROR_TIMEOUT needs to be done separately to keep in line with the
                // standard,
                DWORD _LastErr = GetLastError();
                if (_LastErr == ERROR_TIMEOUT) {
                    return false;
                }
                throw system_error(_LastErr, system_category());
            }
        }
        return true;
    }
    template <class _Clock, class _Duration>
    bool try_acquire_until(const chrono::time_point<_Clock, _Duration>& _Abs_time) {
        return try_acquire_for(_Clock::now() - _Abs_time);
    }

private:
    ptrdiff_t _Counter;
};
using binary_semaphore = counting_semaphore<1>;
_STD_END
#pragma pop_macro("new")
_STL_RESTORE_CLANG_WARNINGS
#pragma warning(pop)
#pragma pack(pop)
#endif
#endif
#endif
